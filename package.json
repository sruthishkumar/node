{
  "name": "portfolio-node",
  "version": "1.0.0",
  "private": true,
  "description": "A sleek portfolio site built with Node.js, Express, and EJS.",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build:css": "tailwindcss -i ./src/input.css -o ./public/css/styles.css --minify",
    "tailwind:watch": "tailwindcss -i ./src/input.css -o ./public/css/styles.css --watch",
    "postinstall": "npm run build:css"
  },
  "dependencies": {
    "ejs": "^3.1.9",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "tailwindcss": "^3.4.10",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.41"
  }
}