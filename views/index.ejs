<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %> • Portfolio</title>
  <meta name="description" content="Personal portfolio website">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <%- include('partials/nav') %>
  <main class="container">
    <section class="hero">
      <div>
        <h1>Hi, I’m <span style="background:linear-gradient(90deg,#60a5fa,#a78bfa);-webkit-background-clip:text;background-clip:text;color:transparent;">Sruthish Kumar</span>.</h1>
        <p>Full‑stack developer crafting delightful products. I love building fast, accessible experiences.</p>
        <a class="cta" href="/works">See my work →</a>
      </div>
      <div class="notice">
        Tip: Edit this content in <code>views/index.ejs</code> and styles in <code>public/css/styles.css</code>.
      </div>
    </section>

    <section style="margin-top:24px;">
      <h2>Featured Work</h2>
      <div class="grid" style="margin-top:12px;">
        <% works.forEach(w => { %>
          <a class="card" href="/works/<%= w.slug %>">
            <h3><%= w.title %></h3>
            <p class="muted"><%= w.summary %></p>
            <div style="margin-top:8px;">
              <% w.tech.forEach(t => { %><span class="chip"><%= t %></span><% }) %>
            </div>
          </a>
        <% }) %>
      </div>
    </section>
  </main>
  <%- include('partials/footer') %>
</body>
</html>
